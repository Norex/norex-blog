<section id="main-sidebar"> 
  <div class="container">
    <div class="block" id="main-nav">
      <ul>
        <li><%= link_to 'About', 'http://sitebynorex.com/about' %></li>
        <li><%= link_to 'Work', 'http://sitebynorex.com/work' %></li>
        <li><%= link_to 'Sitebynorex.com', 'http://sitebynorex.com/', class: 'orange' %></li>
        <li><%= link_to '@sitebynorex', 'http://twitter.com/sitebynorex', class: 'twitter' %></li>
      </ul>
      <a href="#main-nav" id="main-nav-btn" class="menu-icon"><span class="entypo">&#9776;</span></a>
    </div>
    <div class="block center">
      <a href="/"><%= image_tag('logo.png', alt: 'The Society of Online Engineers') %></a>
    </div>
    <div class="block search">
      <%= form_tag search_path, :method => 'get' do %>
        <p>
          <%= text_field_tag 'query', nil, :placeholder => 'Search' %>
        </p>
      <% end %>
    </div>
    <% if params[:action] == 'index' %>
      <%#= render 'shared/types_block' %>
      <%#= render 'shared/tags_block' %>
      <%#= render 'users/sidebar_block' %>
    <% end %>
  </div>
</section>